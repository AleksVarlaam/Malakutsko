<%= provide :navbar do %>
    <!-- Site header -->
    <nav class=" border-gray-200 bg-gradient-to-r from-gray-900 to-gray-800">
        <div class="flex flex-wrap justify-between items-center mx-auto lg:max-w-screen-xl p-4">
            <!-- Main title -->
            <%= link_to root_path, class: 'grid grid-rows-2 grid-flow-col' do %>
                <span class="self-center text-4xl font-semibold whitespace-nowrap dark:text-white">Malakutsko</span>
                <span class="self-center text-sm font-semibold whitespace-nowrap dark:text-gray-200">Медицинский массажист</span>
            <% end %>
            <div class="flex items-center justify-between space-x-4 w-full lg:w-auto">
                <!-- Location -->
                <span class="flex items center dark:text-gray-200 text-xl">
                    <%= heroicon 'map-pin', class: 'w-6 h-6 mr-1'%>
                    Турция, г. Аланья
                </span>
                <!-- Locales -->
                <%= render 'shared/locales'%>
            </div>
        </div>
    </nav>
    <!-- Navbar -->
    <nav class="bg-gray-50 dark:bg-gray-700">
        <div class="max-w-screen-xl px-4 py-3 mx-auto">
            <div class="flex items-center justify-between">
                <!-- Content navigation -->
                <ul class="flex flex-row font-medium mt-0 mr-6 space-x-3 lg:space-x-8 text-sm">
                    <%= render 'shared/navigations/content_links_list', 
                        link_class: " hover:underline", 
                        current_page: current_page
                    %>
                </ul>
                <ul class="hidden sm:flex items-center font-medium mt-0 mr-6 space-x-5 lg:space-x-8 text-sm justify-end">
                    <!-- Instagram -->
                    <li>
                        <%= link_to '#' do %>
                            <%= image_tag asset_path("icons/social/icons8-instagram-48.png"), 
                            class: 'w-5 h-5 rounded-full hover:shadow-lg hover:shadow-gray-200'%>
                        <% end %>
                    </li>
                    <!-- Facebook -->
                    <li>
                        <%= link_to '#' do %>
                            <%= image_tag asset_path("icons/social/icons8-facebook-48.png"), 
                                class: 'w-5 h-5 rounded-full hover:shadow-lg hover:shadow-gray-200'%>
                        <% end %>
                    </li>
                    <!-- Telegram -->
                    <li>
                        <%= link_to '#' do %>
                            <%= image_tag asset_path("icons/social/icons8-telegram-app-50.png"), 
                                class: 'w-5 h-5 rounded-full hover:shadow-lg hover:shadow-gray-200'%>
                        <% end %>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
<% end %>