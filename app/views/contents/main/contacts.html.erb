                        </span>
                    </p>
                    <!-- WhatsApp -->
                    <%= link_to 'https://wa.me/972533082011', class: "flex items-center text-white space-x-5" do %>
                        <i class="fa-brands fa-whatsapp fa-lg"></i>
                        <span class="text-white truncate w-auto hover:underline">+972 53-308-2011</span>
                    <% end %>
                    <!-- Telegram -->
                    <%= link_to 'https://t.me/Vladimir_massage', class: "flex items-center text-white space-x-5" do %>
                        <i class="fa-brands fa-telegram fa-lg"></i>
                        <span class="text-white truncate w-auto hover:underline">@Vladimir_massage</span>
                    <% end %>
                </div>

                <div class="mt-6 md:mt-8">
                    <h3 class="text-gray-300 ">Подписывайтесь на меня</h3>

                    <div class="flex mt-4 space-x-3">
                        <!-- Instagram -->
                        <%= link_to 'https://www.instagram.com/massage_from_israel/?r=nametag', 
                            class: "rounded-full hover:shadow-lg hover:shadow-gray-200 text-white" do %>
                            <i class="fa-brands fa-instagram fa-2xl"></i>
                        <% end %>
