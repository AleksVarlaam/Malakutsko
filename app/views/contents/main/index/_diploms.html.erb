<!-- Diploms -->
<section class="bg-gradient-to-r from-blue-900 via-blue-800 to-blue-600 dark:from-gray-800 dark:to-gray-900">
    <div class="container px-6 py-10 mx-auto space-y-8">
        <!-- Title -->
        <h1 class="text-2xl font-semibold text-center lg:text-3xl text-white mb-12" id="diploms">Мои дипломы</h1>
        <!-- Diplom gallery -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <% (action_name == 'about' ? 23 : 8).times do |i| %>
                <div>
                    <%= image_tag("diploms/image-#{i}.webp", class: "h-auto max-w-full rounded-lg", alt: "")%>
                </div>
            <% end %>
        </div>
        <!-- Link -->
        <%= tag.div class: "flex justify-center" do %>
            <%= link_to "Смотреть все дипломы", about_path(anchor: 'diploms'), class: "text-white bg-gradient-to-r from-gray-700 via-gray-600 to-gray-700 hover:bg-gradient-to-br shadow-md hover:shadow-lg hover:shadow-gray-500/50 shadow-gray-500/50 dark:shadow-md dark:shadow-gray-800/80 dark:hover:shadow-gray-800/80 font-medium rounded-lg text-sm px-4 py-2 text-center flex items-center justify-center"%>
        <% end if action_name != 'about'%>
    </div>
</section>

